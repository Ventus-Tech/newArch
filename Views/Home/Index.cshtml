@model t.Models.Personas

@{
    ViewData["Title"] = "Agregar Persona";
}
<h1>CRUD</h1>
<div class="row">

    <div class="col-md-3">
        <h2>Agregar</h2> 
            <form method="POST" > 
                 <label asp-for="Nombre"></label>
                 <br/>
                <input type="text" asp-for="Nombre">
                 <span asp-validation-for="Nombre"></span>
                   <br/>
                 <label asp-for="Telefono"></label>  
                 <br/>
                <input type="tel" asp-for="Telefono"> 
                 <span asp-validation-for="Telefono"></span>
                 <br/>
                <input type="submit" value="Grabar" class="btn btn-primary"/>
            </form> 
    </div>
</div>
